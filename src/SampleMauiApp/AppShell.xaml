<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SampleMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleMauiApp"
    xmlns:page="clr-namespace:SampleMauiApp.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="First"
        ContentTemplate="{DataTemplate page:FirstPage}"
        Route="first" />

    <ShellContent
        Title="Second"
        ContentTemplate="{DataTemplate page:SecondPage}"
        Route="second" />

    <ShellContent
        Title="Parmed"
        ContentTemplate="{DataTemplate page:ParamsPage}"
        Route="params" />

</Shell>
